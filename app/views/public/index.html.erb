  <% if account_signed_in? %>
  <div class="row">
    <div class="col">
      <p class="h3 mb-5">All Community Posts</p>

      <!-- Search bar goes here -->

                <%= form_tag posts_path, :class => "mb-4 float-start" , :method => 'get' do %>
                  <%= text_field_tag :search, params[:search], :class => "search-box rounded", :placeholder => "  Search all posts" %>
                  <%= submit_tag "Search", :class => "search-button btn btn-outline-primary"%>
                <% end %>


    </div>
  </div>


  <div class="row">
    <div class="col-8">

      <%= render partial: "posts/list", locals: {posts: @posts} %>

    </div>
    <div class="col-4">
      <p class="h5 mb-4">Upcoming Communities</p>

      <ul class="list-group">
        <% @communities.each do |community| %>
        <li class="list-group-item"><%= link_to community.name, community_path(community.id) %></li>
        <% end %>
      </ul>

    <%= link_to "View all Communities", communities_path, class: "btn btn-primary mt-3" %>

      <h5 class="mt-5">Important Information</h5>
      <div class="card mt-4 p-3">
        <li>Users are able to edit or delete their own posts.</li><br>
        <li>For editing or deleting a comment or community please contact the administrator: <strong>"craigsy@ga.co".</strong></li>
      </div>
    </div>
  </div>
<% else %>
  <br><h4>Please <a href="/accounts/sign_up">sign up</a> or <a href="/accounts/sign_in">login</a> to access the discussion forum.</h4><br>
<% end %>
