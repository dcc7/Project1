
<div class="row">
  <div class="col-sm-6">
    <%= form_for @community do |form| %>
      <div class="form-group mb-3 mt-4">
        <%= label_tag :name %>
        <%= form.text_field :name, class: "form-control" %>
      </div>

      <div class="form-group mb-3">
        <%= label_tag :url %>
        <%= form.text_field :url, class: "form-control" %>
      </div>

      <div class="form-group mb-3">
        <%= label_tag :rules %>
        <%= form.text_area :rules, class: "form-control" %>
      </div>

      <div class="form-group mb-3 pb-4">
        <%= label_tag :summary %>
        <%= form.text_field :summary, class: "form-control" %>
      </div>

      <%= form.submit "Submit", class: "btn btn-primary mb-5" %>
    <% end %>
  </div>
</div>
